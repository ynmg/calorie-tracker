<div class="reg-container">
  <div class="form-styled-password">
    <h2>Forgot your password?</h2>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">

            <div class="tab-entry">
              <%= f.input :email,
                    label: false,
                    placeholder: "Email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
            </div>
          <br>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-signup btn-lg fw-bold" %>
          </div>
    <% end %>
    <br>
    <div class="tab-entry div-centered">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
