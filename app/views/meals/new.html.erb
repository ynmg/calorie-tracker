<div class="container-full" data-controller="ingredients" data-ingredients-url-value="<%= ingredients_url %>">
  <div class="form-wide">
    <div class="meals-grid ">
      <%= simple_form_for @meal do |f| %>
        <%= render 'meals/meal_fields', f: f %>
        <div data-controller="toggle">
          <button data-action="click->toggle#fire" class="btn btn-outline-dark-green">Choose ingredients</button>
          <div data-toggle-target="togglableElement" class="d-none">
            <%= f.simple_fields_for :portions do |portion_fields| %>
              <div data-ingredients-target="ingredients">
                <%= portion_fields.association :ingredient, collection: Ingredient.all, prompt: "Select ingredient" %>
              </div>
              <button type="button" class="btn btn-outline-dark-green" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Find new ingredients
              </button>
              <%= portion_fields.input :quantity, label:"Weight", placeholder:"Weight in grams" %>
            <% end %>
            <%= f.submit "Add", class:"btn btn-lg btn-signup" %>
          </div>
        </div>
      <% end %>
      
      <div class="text-secondary">
        <h2>Your Selected Foods</h2>
        <p>Please review the food items and quantities you've added before submitting this meal.</p>
        <%= render "details", meal: @meal %>
      </div>
    </div>
     <%= render 'ingredients/modal' %>
  </div>
</div>
